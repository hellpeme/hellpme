<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtChat"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_rect2"
        android:maxWidth="300dp"
        android:minWidth="100dp"
        android:padding="8dp"
        android:paddingBottom="15dp"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtChat"
        app:layout_constraintEnd_toStartOf="@+id/txtChat" />

    <ImageView
        android:id="@+id/imageView_message_item"
        android:layout_width="230dp"
        android:layout_height="130dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@+id/txtChat"
        app:layout_constraintEnd_toEndOf="@+id/txtChat"
        app:layout_constraintStart_toStartOf="@+id/txtChat"
        app:layout_constraintTop_toTopOf="@+id/txtChat"
        tools:srcCompat="@tools:sample/avatars" />
</android.support.constraint.ConstraintLayout>